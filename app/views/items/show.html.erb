<h2><%= @item.name %></h2>
<div class="card-product">
  <%= cl_image_tag @item.photo.key, width: 285, height: 290, crop: :fill %>
  <div class="card-infos">
    <div class="card-product-infos">
      <p><strong>Name:  </strong><%= @item.name %></p>
      <p><strong>Category:  </strong><%= @item.category %></p>
      <p><strong>Description:  </strong><%= @item.description %></p>
      <p><strong>Price:  </strong>$<%= @item.price %></p>
      <p><strong>Size:  </strong><%= @item.size %></p>
      <br>
    </div>
      <div class="card-links">
        <%= link_to "Go Back", items_path, class: "btn btn-flat" %>
        <%= link_to "Book", new_item_booking_path(@item), class: "btn btn-flat" %>
        <% if policy(@item).edit? %>
          <%= link_to "Edit", edit_item_path(@item), class: "btn btn-flat" %>
        <% end %>
        <% if policy(@item).destroy? %>
          <%= button_to "Delete", @item, method: :delete, class: "btn btn-flat" %>
        <% end %>
    </div>
  </div>
</div>

<i class=""></i>
<%= cl_image_tag @item.photo.key, width: 285, height: 290, crop: :fill %>
<p><strong>Name:  </strong><%= @item.name %></p>
<p><strong>Category:  </strong><%= @item.category %></p>
<p><strong>Description:  </strong><%= @item.description %></p>
<p><strong>Price:  </strong>$<%= @item.price %></p>
<p><strong>Size:  </strong><%= @item.size %></p>

<% unless @item.item_reviews.empty? %>
  <p><strong>Item Rating:  </strong><%= "#{'⭐'*@average_item_rating} - #{@item_reviews.count} Reviews" %></p>
  <p><strong>Seller Rating:  </strong><%= "#{'⭐'*@average_seller_rating} - #{@seller_reviews.count} Reviews"%></p>
<% end %>

<hr>

<h2>ITEM REVIEWS</h2>
<%= render partial: "reviews", locals: { reviews: @item_reviews } %>
<hr>
<h2>SELLER REVIEWS</h2>
<%= render partial: "reviews", locals: { reviews: @seller_reviews } %>
<hr>

<%= link_to "go back", items_path, :class => "btn btn-primary m-1" %>
<br>
<% if policy(@item).edit? %>
  <%= link_to "Edit", edit_item_path(@item), :class => "btn btn-secondary m-1" %>
<% end %>
<br>
<% if policy(@item).destroy? %>
  <%= button_to "Delete Item", @item, method: :delete, :class => "btn btn-warning m-1" %>
<% end %>
<br>
<%= link_to "Book this item", new_item_booking_path(@item), :class => "btn btn-success m-1" %>
<hr>
