<h2>Items:</h2>

<%= form_with(url: items_path, method: :get, local: true) do |form| %>
  <%= hidden_field_tag :query, params[:query]%>
  <%= form.select :order, ["Price High to Low", "Price Low to High", "Relevance"], :selected => params[:order] %>
  <%= form.submit "Sort" %>
<% end%>

<%= form_with url: items_path, method: :get, class: "d-flex my-3" do %>
  <%= hidden_field_tag :order, params[:order]%>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find an item"
    %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div><%= link_to "List an item", new_item_path, :class => "btn btn-primary m-1" %></div>
<div><%= render "item" %></div>
