<div class="d-flex flex-wrap">
  <% @bookings.each do |booking| %>

    <div class="card m-2 text-center" style="width: 18rem;">
      <% unless booking.item.photo.key == nil %>
        <%= cl_image_tag booking.item.photo.key, width: 285, height: 290, crop: :fill %>
      <% else %>
        <%= cl_image_tag "j7y67nkdzgsg385degrw5n4os33d", width: 285, height: 290, crop: :fill %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to booking.item.name, edit_booking_path(booking) %></h5>
        <p class="card-text"><strong>Status: </strong><%= booking.status %></p>
        <p class="card-text"><strong>Start date: </strong><%= booking.start_date.strftime("%d/%m/%Y") %></p>
        <p class="card-text"><strong>End date: </strong><%= booking.end_date.strftime("%d/%m/%Y") %></p>
        <p class="card-text"><strong>Total days: </strong><%= total_booking_days(booking) %></p>
        <p class="card-text"><strong>Cost: </strong>$<%= total_price(booking) %></p>
      </div>
    </div>
  <% end %>

</div>
